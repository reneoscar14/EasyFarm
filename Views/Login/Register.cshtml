@model EasyFarm.Models.User
@{
    ViewBag.Title = "Register";
    Layout = "~/views/shared/_layoutlogin.cshtml";
   
}

<h2>EasyFarm - Register</h2>

<form action="@Url.Action("PostRegister")" method="post">
    <table>
        <tr>
            <td>
                <label for="user">Usuario:</label>
            </td>
            <td>
                @Html.TextBoxFor(m => m.UserName, new { @placeholder = "Usuario" })
            </td>
        </tr>
        <tr>
            <td>
                <label for="pwrd">Contraseña:</label>
            </td>
            <td>
                @Html.TextBoxFor(m => m.Password, new { @placeholder = "Contraseña", @type = "password" })
            </td>
        </tr>

    </table>

    <input type="submit" class="btn btn-primary" value="Entrar" />
</form>


